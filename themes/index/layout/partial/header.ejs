<header class="header">
  <div class="container">
    <h1 class="header-logo">
      <a class="no-style header-link" href="
      <% if (is_home()) { %>
        <%= config.root %>
      <% } else { %>
        <%= url_for(page.lang) %>
      <% } %>
      ">JS Index</a>
    </h1>
    <a class="no-style header-link" href="<%= url_for(page.lang + '/archives') %>"><%= __('archives') %></a>
    <a class="no-style header-link" href="<%= url_for(page.lang + '/new') %>"><%= __('new') %></a>
    <a class="no-style header-link" target="_blank" href="<%= config.github %>"><%= __('github') %></a>
    <form class="header-search-form">
      <input class="header-search-input" type="text" placeholder="<%= __('search') %>"/>
    </form>
    <div class="header-lang-select-wrap header-link">
      <label>
      <% if (page.path === 'index.html') { %>
        Choose a language
      <% } else { %>
        <%= site.data.languages[page.lang] %>
      <% } %>
      </label>
      <select class="header-lang-select">
      <% config.language.filter(lang => lang !== 'default').forEach(lang => { %>
        <option value="<%= lang %>"><%= site.data.languages[lang] %></option>
      <% }); %>
      </select>
    </div>
  </div>
</header>
